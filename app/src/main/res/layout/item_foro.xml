<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="#FFFFFF"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre del Foro -->
        <TextView
            android:id="@+id/tvNombreForo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Foro"
            android:textSize="18sp"
            android:textColor="#6200EE"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <!-- Descripci贸n del Foro -->
        <TextView
            android:id="@+id/tvDescripcionForo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripci贸n breve del foro, muestra solo una parte del contenido para no sobrecargar la vista."
            android:textSize="14sp"
            android:textColor="#333"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Fecha de Creaci贸n -->
        <TextView
            android:id="@+id/tvFechaForo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de creaci贸n: 01/01/2024"
            android:textSize="12sp"
            android:textColor="#888"
            android:fontFamily="sans-serif" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
