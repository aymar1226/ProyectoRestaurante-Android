<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EFE0"
    android:padding="16dp">

    <!-- Título de la página -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="24dp" />

    <!-- CardView para imagen de perfil y botón de cámara -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="65dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <!-- CardView para campos de texto -->
    <androidx.cardview.widget.CardView
        android:id="@+id/detailsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Campo para Nombre -->
            <EditText
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:backgroundTint="#000000"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Campo para Número de Teléfono -->
            <EditText
                android:id="@+id/phoneNumberField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono"
                android:inputType="phone"
                android:backgroundTint="#000000"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Campo para Número de Teléfono -->
            <EditText
                android:id="@+id/AdressField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion"
                android:inputType="phone"
                android:backgroundTint="#000000"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Spinner para Relación -->
            <Spinner
                android:id="@+id/relationshipSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botones Guardar y Cancelar con diseño mejorado -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/detailsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"> <!-- Espacio extra arriba del botón -->

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:elevation="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
